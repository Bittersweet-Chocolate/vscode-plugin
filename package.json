{
	"name": "vscode-plugin",
	"displayName": "vscode-plugin",
	"description": "FirstExtension插件",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:plugin.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "plugin.helloWorld",
				"title": "Hello World"
			}
		],
		// 快捷键绑定，分为mac和win操作系统；when是触发的先决条件，可不配；
		"keybindings": [
			{
				"command": "firstExt.hello",
				"key": "ctrl+w",
				"mac": "cmd+shift+w",
				"when": "editorTextFocus"
			}
		],
		// 菜单
		"menus": {
			// 编辑器鼠标右键菜单
			"editor/context": [],
			// 编辑器右上角图标，不配置图片就显示文字
			"editor/title": [],
			// 编辑器标题右键菜单
			"editor/title/context": [],
			// 资源管理器右键菜单
			"explorer/context": []
		},
		// 自定义新的activitybar图标，也就是最左侧 图标栏
		"viewsContainers": {},
		// 自定义左侧侧边栏内view树的实现
		"views": {},
			// 插件自定义设置项，由用户配置后传参进入代码逻辑里，暂不展示
		"configuration": {}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.59.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
